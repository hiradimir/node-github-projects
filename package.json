{
  "name": "node-github-projects",
  "private": false,
  "license": "MIT",
  "repository": "https://github.com/hiradimir/node-github-projects",
  "main": "dist/js/main/index.js",
  "typings": "dist/js/main/index.d.ts",
  "scripts": {
    "clean": "rimraf dist/",
    "tsc": "tsc",
    "test": "NODE_ENV=test; mocha --opts src/spec/mocha.opts",
    "test-debug": "NODE_ENV=test; mocha --inspect --debug-brk --opts src/spec/mocha.opts",
    "prepare": "npm run build",
    "prebuild": "npm run clean",
    "build": "npx tsc && npm test",
    "coverage": "NODE_ENV=test; nyc mocha --opts src/spec/nyc-mocha.opts"
  },
  "directories": {
    "test": "src/spec"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/spec/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html",
      "cobertura"
    ],
    "report-dir": "dist/report",
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@octokit/rest": "^15.9.5",
    "bluebird": "^3.5.1",
    "dotenv": "^6.0.0",
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.23",
    "@types/lodash": "^4.14.116",
    "@types/mocha": "^5.2.5",
    "@types/node": "^13.1.7",
    "@types/power-assert": "^1.5.0",
    "espower-typescript": "^9.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.17.0",
    "npm-check-updates": "^2.14.2",
    "nyc": "^12.0.2",
    "power-assert": "^1.6.0",
    "remap-istanbul": "^0.11.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.9.3",
    "source-map-support": "^0.5.6",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.1"
  }
}
